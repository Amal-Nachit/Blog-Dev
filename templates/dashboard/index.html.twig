    {% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<header class="flex items-center justify-between mb-4 p-4">
    <div class="flex-1 flex justify-center">
        <img src="{{ asset('images/logo1.png') }}" alt="Logo" class="h-40 w-40">
    </div>
    <div class="flex justify-end space-x-4">
        <a href="{{ path('app_article_index') }}" class="mr-2">Tous les utilisateurs</a>
        <a href="{{ path('app_logout') }}">Se déconnecter</a>
    </div>
</header>

<div class="container mx-auto p-4">        
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for article in articles %}
            <div class="bg-white border border-gray-200 rounded-lg shadow-md max-w-xs w-full h-64">
                <a href="{{ path('app_article_show', {'id': article.id}) }}">
                    <img class="rounded-t-lg w-full h-40 object-cover" src="{{ article.image }}" alt="{{ article.title }}" />
                </a>
                <div class="p-4">
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">
                        <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900">{{ article.title }}</h5>
                    </a>
                    <p class="mb-3 text-gray-700 text-sm">Dernière mise à jour: {{ article.timeAgo }}</p>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}" class="inline-flex items-center px-3 py-1 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300">
                        Voir l'article
                        <svg class="w-3.5 h-3.5 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                        </svg>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}